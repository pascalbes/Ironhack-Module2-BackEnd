<div class="big-container product-manage-wrapper flexed-item">
  <form action="/dashboard/add" method="post" class="add-product-form" enctype="multiparty/form-data">
    {{#if msg}}
    <p class="msg {{msg.statu}}">{{msg.txt}}</p>
    {{/if}}
    <h3 class="form-title">Add sneakers to the collection</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-name" class="label-name label">Model name</label>
      <input id="sneaker-name" name="name" type="text" class="input-text input" placeholder="Nike Air Max 90"
        value="air max 1">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-ref" class="label-ref label">RÃ©f.</label>
      <input id="sneaker-ref" name="ref" type="text" class="input-text input" placeholder="ex: NV23498"
        value="NV23498">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-size" class="label-ref label">Sizes</label>
      <input id="sneaker-size"  name="sizes" type="text" class="input-text input" placeholder="ex: 37" value="42">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-descr" class="label-descr label">Description</label>
      <input id="sneaker-descr" name="description" type="text" class="input-text input"
        placeholder="The better sneakers to run" value="foo bar baz">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-price" class="label-price label">Price</label>
      <input id="sneaker-price" name="price" type="number" class="sneaker-price input" min="1" value="123">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-img" class="label-price label">Image</label>
      <input id="sneaker-img" name="image" type="file" class="sneaker-price input">
    </div>
    <label for="sneaker-main-cat" class="label-main-cat label">Choose main category...</label>
     <div class="form-item-wrapper">
      <input type="checkbox" name="men" class="select">
      <label value="men">Men</label>
      <input type="checkbox" name="women" class="select">
      <label value="women">Women</label>
      <input type="checkbox" name="kids" class="select">
      <label value="kids">Kids</label>
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="tags" class="label">Tags</label>
      {{> form_tags_select}}
    </div>
    <button class="button-primary add-sneaker-btn">Add to collection</button>
  </form>

  <div class="add-tag-form">
    <p id="add-tag-message" class="msg"></p>
    <h3 class="form-title">Add tags</h3>
    <form action="/dashboard/add-tag" method="post" class="add-product-form">
      <div class="form-item-wrapper flexed-item">
          <label for="category-name" class="category-name label">Sneaker tag</label>
          <input id="new_tag_name" type="text" class="input" placeholder="ex: Gangsta" name="name">
      </div>
      <button id="btn_new_tag" class="button-primary add-category-btn">Create this category</button>
    </form>
  </div>
</div>